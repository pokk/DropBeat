<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_toast_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/md_one_unit"
    app:cardBackgroundColor="@color/shark"
    app:cardCornerRadius="@dimen/md_one_half_unit"
    app:cardElevation="@dimen/md_one_half_unit"
    >

    <com.no1.taiwan.stationmusicfm.widget.components.textview.FontTextView
        android:id="@+id/ftv_toast_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/md_two_unit"
        android:textColor="@android:color/white"
        tools:text="This is toast msg!!"
        />
</androidx.cardview.widget.CardView>

