<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/player_fragment">

    <fragment
        android:id="@+id/player_fragment"
        android:name="taiwan.no.one.feat.player.presentation.fragments.PlayerFragment"
        android:label="PlayerFragment"
        tools:layout="@layout/fragment_player">
        <deepLink app:uri="@string/deep_link_player"/>
        <action
            android:id="@+id/action_player_to_playlist_create"
            app:destination="@id/nav_playlist_create"/>
    </fragment>

    <activity
        android:id="@+id/player_activity"
        android:name="taiwan.no.one.feat.player.presentation.activities.PlayerActivity"
        android:label="PlayerActivity"
        tools:layout="@layout/fragment_player"/>

    <include-dynamic
        android:id="@+id/nav_playlist_create"
        app:graphResName="nav_dynamic_create"
        app:moduleName="library"/>
</navigation>
