<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dusk</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/coral</item>
        <item name="android:textColor">@color/colorText</item>

        <!-- Customized font -->
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>

        <item name="popupMenuStyle">@style/Taiwan.No.One.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Taiwan.No.One.PopupMenu</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/Taiwan.No.One.TextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/Taiwan.No.One.TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Taiwan.No.One.TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/Taiwan.No.One.TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/Taiwan.No.One.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/Taiwan.No.One.TextAppearance.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>

        <!-- Customized Attributes -->
        <item name="textAppearanceCaption1">@style/Taiwan.No.One.TextAppearance.Caption1</item>
        <item name="textAppearanceCaption2">@style/Taiwan.No.One.TextAppearance.Caption2</item>
        <item name="textAppearanceButton1">@style/Taiwan.No.One.TextAppearance.Button1</item>
        <item name="textAppearanceButton2">@style/Taiwan.No.One.TextAppearance.Button2</item>
    </style>

    <style name="Dialog.FullScreen.Theme" parent="AppTheme">
        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--region Button -->
    <style name="Taiwan.No.One.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
    </style>

    <style name="Taiwan.No.One.Button.IconOnly" parent="Taiwan.No.One.TextButton">
        <item name="android:layout_width">@dimen/md_five_unit</item>
        <item name="android:layout_height">@dimen/md_five_unit</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@android:color/white</item>
    </style>

    <style name="Taiwan.No.One.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/md_button_height_56dp</item>
        <item name="backgroundTint">@color/selector_bg_button</item>
        <item name="android:textColor">@color/selector_text_button</item>
        <item name="cornerRadius">@dimen/md_two_unit</item>
    </style>

    <style name="Taiwan.No.One.Special.Button" parent="Taiwan.No.One.Button.IconOnly">
        <item name="android:textColor">@color/pastel_pink</item>
        <item name="backgroundTint">@color/special_button_background</item>
        <item name="iconTint">@color/pastel_pink</item>
    </style>

    <style name="Taiwan.No.One.Back.Button" parent="Taiwan.No.One.Button.IconOnly">
        <item name="android:layout_marginTop">@dimen/md_one_unit</item>
        <item name="android:layout_marginStart">@dimen/md_two_unit</item>
        <item name="icon">@drawable/ic_back</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
    <!--endregion-->

    <style name="Taiwan.No.One.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
    </style>

    <style name="Taiwan.No.One.PopupWindow" parent="Widget.AppCompat.PopupWindow">
    </style>
</resources>
